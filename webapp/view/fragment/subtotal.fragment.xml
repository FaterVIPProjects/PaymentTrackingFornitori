<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">

		<l:Grid>
			<!--HEADER -->
			<Table id="subtotalTable" class="tableHeader sapUiSizeCompact" showNoData="true"
				items="{subtotal>/SubTotals}">
				<columns>
					<Column hAlign="Right">
						<Text text="{i18n>subTotalLabel}"/>
					</Column>
				</columns>
				<layoutData>
					<l:GridData span="L12 M12 S12" linebreak="false"/>
				</layoutData>
				<!--DATA -->
				<items >
					<ColumnListItem>
						<cells>
							<ObjectNumber number="{subtotal>Value}" unit="{subtotal>CurrencyCode}" state="{subtotal>State}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</l:Grid>


</core:FragmentDefinition>
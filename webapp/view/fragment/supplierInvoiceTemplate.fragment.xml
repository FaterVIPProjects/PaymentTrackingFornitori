<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<l:Grid>
		<ObjectHeader numberState="{ path: 'Invoices', formatter: '.formatter.numberStateFormatter' }"
			intro="{i18n>paymentConditionLabel}: {paymentConditions}" title="{i18n>supplierNameLable}: {supplierName}"
			number="{ path: 'Invoices', formatter: '.formatter.totalFormatter' }" numberUnit="{Invoices/0/currency}" condensed="true" responsive="true"
			tooltip="{i18n>supplierDetailObjectHeaderTTP}">
			<attributes>
				<ObjectAttribute class="boldAttributeText" title="{i18n>typeCompanyFilterLabel}" text="FATER S.P.A."/>
			</attributes>
			<layoutData>
				<l:GridData span="L9 M9 S9" linebreak="true"/>
			</layoutData>
			
			
		</ObjectHeader>
		
		<!-- Subtotali per divisa -->
		<core:Fragment fragmentName="org.fater.paymenttrackingsupplier.view.fragment.subtotal" type="XML"/>
		
		
		<!-- Opzione 1: visualizzazione con List di CustomListItem(s) -->
		<!--<core:Fragment fragmentName="org.fater.paymenttrackingsupplier.view.fragment.listContent" type="XML" />-->
		<!-- Opzione 2: visualizzazione con ResponsiveTable -->
		<core:Fragment fragmentName="org.fater.paymenttrackingsupplier.view.fragment.tableContent" type="XML"/>
		<!--		<VBox height="250px" visible="{lastSupplier}" />-->
	</l:Grid>
</core:FragmentDefinition>